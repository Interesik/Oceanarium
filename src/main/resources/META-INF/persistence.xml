<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="thePersistenceUnit">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>org.nbd.entities.Client</class>
    <class>org.nbd.entities.Ticket</class>
    <class>org.nbd.entities.SingleTicket</class>
    <class>org.nbd.entities.GroupTicket</class>
    <class>org.nbd.entities.NormalTicket</class>
    <class>org.nbd.entities.NormalGroupTicket</class>
    <class>org.nbd.entities.StudentTicket</class>
    <class>org.nbd.entities.SeniorTicket</class>
    <class>org.nbd.entities.ReductedGroupTicket</class>
    <class>org.nbd.entities.ReductedGroupTicket</class>
    <class>org.nbd.entities.AbstractEntity</class>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" /> <!-- DB Driver -->
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost/nbddb" /> <!-- BD Mane -->
      <property name="javax.persistence.jdbc.user" value="nbd" /> <!-- DB User -->
      <property name="javax.persistence.jdbc.password" value="nbdpassword" /> <!-- DB Password -->

      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL95Dialect"/> <!-- DB Dialect -->
      <property name="hibernate.hbm2ddl.auto" value="update" /> <!-- create / create-drop / update -->

      <property name="hibernate.show_sql" value="true" /> <!-- Show SQL in console -->
      <property name="hibernate.format_sql" value="true" /> <!-- Show SQL formatted -->
    </properties>

  </persistence-unit>
</persistence>
